@{
    var selectedCustomer = @sessionTempDataServices.GetCurrentCustomer();
    var hasBeenSelected = (selectedCustomer != null && selectedCustomer.CustomerNumber != null); //(selectedCustomer!=null && selectedCustomer.CustomerNumber.Length > 0);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] - HackYeah2018</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/mdb.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-light white scrolling-navbar">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand waves-effect" href="https://hackyeah.pl/" target="_blank">
                <strong class="blue-text">HackYeah 2018</strong>
            </a>
            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link waves-effect" href="@Url.Action("Index", "Home")">
                            Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect" href="@Url.Action("SelectCustomer", "Home")">Select customer</a>
                    </li>
                    @{ if (hasBeenSelected)
                        {
                            <li class="nav-item">
                                <a class="nav-link waves-effect" href="@Url.Action("ShowAccounts", "Home")">Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link waves-effect" href="@Url.Action("ClearSelectedCustomer", "Home")">
                                    <i class="fa fa-eject"></i>
                                    <span class="clearfix d-none d-sm-inline-block">Clear selected</span>
                                </a>
                            </li>
                        }
                    }
                </ul>
                <!-- Right -->
                <ul class="navbar-nav nav-flex-icons">
                    <li class="nav-item">
                        <a class="nav-link waves-effect">
                            <span class="badge red z-depth-1 mr-1">@selectedCustomer.CustomerNumber</span>
                            <i class="fa fa-shopping-cart"></i>
                            <span class="clearfix d-none d-sm-inline-block"> @selectedCustomer.Bank</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar -->
    <!--Main layout-->
    <main>
        <div class="container" style="padding-top:100px">
            @RenderBody()
        </div>
    </main>
    <!--Main layout-->

    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/mdb.min.js"></script>
    <script src="~/js/addons/datatables.min.js"></script>

    <!-- Initializations -->
    <script type="text/javascript">
        // Animations initialization
        new WOW().init();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
